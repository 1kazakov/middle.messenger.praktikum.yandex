{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "declaration": false,
    "module": "es6",
    "strictNullChecks": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"]
    }
  }
}
